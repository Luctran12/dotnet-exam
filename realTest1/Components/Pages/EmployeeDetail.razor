@page "/employeedetails/{id}"
@inherits realTest1.Components.Pages.EmployeeDetailBase

@if (Employee == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="row justify-content-center m-3">
        <div class="col-sm-5">
            <div class="card">
                <div class="card-header">
                    <h1>Name: @Employee.Name </h1>
                   
                </div>
                <div class="card-body text-center">
                    @* <img class="card-img-top" src="@staff.Photo" /> *@
                    <h4>Employee ID: @Employee.Id</h4>
                    <h4>Adress: @Employee.Address</h4>
                    <h4>Starting Date: @Employee.StartingDate.ToString()</h4>
                    <h4>Department: @Employee.DepartmentId</h4>
                </div>
                <div class="card-footer text-center">
                    <a href="/stafflist" class="btn btn-primary">Back</a>
                    <a href="@($"editstaff/{Employee.Id}")" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
}